<div style="padding:10px; float:right;">
  <% case order.aasm_state %>
  <% when "order_placed" %>
    <%= link_to("Cancel order",
                cancel_order_admin_order_path(order),
                class: "btn btn-default btn-sm", method: :post) %>

  <% when "paid" %>
    <%= link_to("Cancel order",
                cancel_order_admin_order_path(order),
                class: "btn btn-default btn-sm", method: :post) %>
    <%= link_to("Ship",
                ship_admin_order_path(order),
                class: "btn btn-default btn-sm", method: :post) %>

  <% when "shipping" %>
    <%= link_to("Deliver",
                deliver_admin_order_path(order),
                class: "btn btn-default btn-sm", method: :post) %>

  <% when "shipped" %>
    <%= link_to("Return goods",
                return_goods_admin_order_path(order),
                class: "btn btn-default btn-sm", method: :post) %>

  <% when "order_cancelled" %>
    <span class="label label-default">Order cancelled</span>

  <% when "good_returned" %>
    <span class="label label-default">Goods returned</span>
  <% end %>
</div>
